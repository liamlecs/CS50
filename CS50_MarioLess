#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int height = 0;
    do
    {
        height = get_int("Height: ");
    }
    while (height <= 0 || height > 8);
    for (int rows = 0; rows < height; rows++)
    {
        for (int space = 1; space <= height - rows - 1; space++)
        {
            printf(" ");
        }
        for (int columns = 0; columns <= rows; columns++)
        {
            printf("#");
        }
        printf("\n");
    }
}
